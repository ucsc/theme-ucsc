{
	"name": "ucsc-2022",
	"version": "1.5.0",
	"description": "The offficial WordPress theme for UC Santa Cruz",
	"main": "build/index.js",
	"scripts": {
		"release": "standard-version",
		"zip": "wp-scripts build && wp-scripts plugin-zip",
		"start": "wp-scripts start",
		"start:hot": "wp-scripts start --hot",
		"build": "wp-scripts build",
		"format": "wp-scripts format",
		"lint:style": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"postpackages-update": "npm run build",
		"lint-php": "vendor/bin/phpcs --standard=WordPress functions.php",
		"format:src": "wp-scripts format ./src",
		"test": "npx lint-staged",
		"postinstall": "npx husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ucsc/ucsc-2022.git"
	},
	"keywords": [
		"WordPress"
	],
	"author": "UC Santa Cruz",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ucsc/theme-ucsc/issues"
	},
	"homepage": "https://github.com/ucsc/theme-ucsc#readme",
	"devDependencies": {
		"@wordpress/scripts": "^22.3.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"standard-version": "^9.3.2"
	},
	"files": [
		"screenshot.png",
		"vendor",
		"!vendor/bin",
		"!vendor/squizlabs/php_codesniffer",
		"!vendor/dealerdirect",
		"!vendor/wp-coding-standards",
		"lib",
		"README.md",
		"readme.txt",
		"CHANGELOG.md",
		"build",
		"theme.json",
		"templates",
		"parts",
		"wp-blocks",
		"images",
		"style.css",
		"patterns",
		"*.php"
	]
}
